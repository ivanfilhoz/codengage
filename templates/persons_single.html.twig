{% extends 'base.html.twig' %}

{% block title %}Editar Pessoa{% endblock %}
{% block toolbar %}
  <a class="btn btn-secondary" href="{{ actions.back }}" role="button">Voltar para Pessoas</a>
{% endblock %}

{% block body %}
<form action="{{ actions.save }}" method="POST">
  <div class="form-group">
    <label for="name">Nome</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Nome" value="{{ person.name }}" required>
  </div>
  <div class="form-group">
    <label for="birthdate">Data de Nascimento</label>
    <input type="date" class="form-control" id="birthdate" name="birthdate" value="{{ person.birthdate }}" required>
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>
{% endblock %}
